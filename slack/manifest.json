{
  "display_information": {
    "name": "sortes",
    "description": "Q&A agent",
    "background_color": "#002b36",
    "long_description": "I am a Question and Answer AI Agent. I will try to answer your question based on the corpus I have been trained on.\r\n\r\n---\r\n\r\n1. To ask a question in a public channel, make sure I am part of the channel then `@sortes any question`.\r\n\r\n2. To ask a private question send me a direct message."
  },
  "features": {
    "app_home": {
      "home_tab_enabled": false,
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "sortes",
      "always_online": false
    }
  },
  "oauth_config": {
    "redirect_urls": ["https://sortes.hiramlabs.com/slack/redirect"],
    "scopes": {
      "bot": [
        "app_mentions:read",
        "chat:write",
        "im:history",
        "im:read",
        "im:write",
        "mpim:history",
        "mpim:read",
        "mpim:write"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://sortes.hiramlabs.com/slack/events",
      "bot_events": [
        "app_mention",
        "im_history_changed",
        "message.im",
        "message.mpim"
      ]
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
